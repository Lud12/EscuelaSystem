@page
@model EscuelaSystem.Web.Pages.EliminarDocenteModel
@{
}

<h1>Eliminar Docente</h1>
<form method="post">
    <input type="hidden" asp-for="Docente.Id" />
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Docente.Codigo"></label>
        <input type="text" class="form-control" asp-for="Docente.Codigo" placeholder="Ingrese un codigo de docente">
        <span class="text-danger" asp-validation-for="Docente.Codigo"></span>
    </div>
    <div class="form-group">
        <label asp-for="Docente.Nombre"></label>
        <input type="text" class="form-control" asp-for="Docente.Nombre" placeholder="Ingrese un nombre de docente">
        <span class="text-danger" asp-validation-for="Docente.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Docente.EnLabor"></label>
        <input type="checkbox" class="form-control" asp-for="Docente.EnLabor">
    </div>
    <button type="submit" class="btn btn-primary">Eliminar</button> <br />
    <a asp-page="/Docentes">Regresar a Docentes</a>
</form>
