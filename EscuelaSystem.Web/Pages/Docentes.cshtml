@page
@model EscuelaSystem.Web.Pages.DocentesModel
@{
}

<h1>Listado de Docentes</h1>
<a class="btn btn-sm btn-success" asp-page="/CrearDocente">Crear Docente</a>
<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>En labor</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Docentes)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Codigo</td>
                <td>@item.Nombre</td>
                <td>
                    @if (item.EnLabor)
                    {
                        <p>SI</p>
                    }
                    else
                    {
                        <p>NO</p>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-area="" asp-page="/EditarDocente" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-area="" asp-page="/EliminarDocente" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }

    </tbody>
</table>