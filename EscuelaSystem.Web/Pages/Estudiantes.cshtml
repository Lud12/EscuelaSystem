@page
@model EscuelaSystem.Web.Pages.EstudiantesModel
@{
}

<h1>Listado de Estudiantes</h1>
<a class="btn btn-sm btn-success" asp-page="/CrearEstudiante">Crear Estudiante</a>
<br /><br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Carnet</th>
            <th>Nombre</th>
            <th>Activo</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Estudiantes)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Carnet</td>
                <td>@item.Nombre</td>
                <td>
                    @if (item.Activo)
                    {
                        <p>SI</p>
                    }
                    else
                    {
                        <p>NO</p>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-area="" asp-page="/EditarEstudiante" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-area="" asp-page="/EliminarEstudiante" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }

    </tbody>
</table>