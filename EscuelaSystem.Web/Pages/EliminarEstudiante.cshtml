@page
@model EscuelaSystem.Web.Pages.EliminarEstudianteModel
@{
}

<h1>Eliminar Estudiante</h1>
<form method="post">
    <input type="hidden" asp-for="Estudiante.Id" />
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Estudiante.Carnet"></label>
        <input type="text" class="form-control" asp-for="Estudiante.Carnet" placeholder="Ingrese un carnet de estudiante">
        <span class="text-danger" asp-validation-for="Estudiante.Carnet"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Nombre"></label>
        <input type="text" class="form-control" asp-for="Estudiante.Nombre" placeholder="Ingrese un nombre de estudiante">
        <span class="text-danger" asp-validation-for="Estudiante.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Activo"></label>
        <input type="checkbox" class="form-control" asp-for="Estudiante.Activo">
    </div>
    <button type="submit" class="btn btn-primary">Eliminar</button> <br />
    <a asp-page="/Estudiantes">Regresar a Estudiantes</a>
</form>
